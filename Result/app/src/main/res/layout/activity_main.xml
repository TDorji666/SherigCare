<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/studentDetails"
        android:layout_centerHorizontal="true"
        android:hint="Enter the students details"
        />


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/studentDetails"
        android:hint="Select the file from Storage"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText"
        android:text="Upload File"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextStdName"
        android:layout_below="@+id/btn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Student Detail"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextStdName"
        android:hint="Enter the name of the student"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextName"
        android:text="Retrieve File"
        android:onClick="RetrieveFile"
        android:textSize="20sp"/>

</RelativeLayout>